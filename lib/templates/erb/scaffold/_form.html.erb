<%%= form_for(@<%= singular_table_name %>, class: 'form-horizontal') do |f| %>
  <%% if @<%= singular_table_name %>.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <strong><%%= t 'errors.alert.header' %></strong>&nbsp;
      <%%= t 'errors.alert.info' %>
      <ul>
        <%% @<%= singular_table_name %>.errors.full_messages.each do |message| %>
          <li><%%= message %></li>
        <%% end %>
      </ul>
    </div>
  <%% end %>
<% attributes.each do |attribute| -%>
  <div class="form-group <%%= 'has-error' if @<%= singular_table_name %>.errors[:<%= attribute.column_name %>].present? %>">
<% if attribute.password_digest? -%>
    <%%= f.label :password, class: 'control-label' %>
    <%%= f.password_field :password, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%%= f.label :password_confirmation, class: 'control-label' %>
    <%%= f.password_field :password_confirmation, class: 'form-control' %>
<% else -%>
    <%%= f.label :<%= attribute.column_name %>, class: 'control-label' %>
    <%%= f.<%= attribute.field_type %> :<%= attribute.column_name %>, class: 'form-control' %>
<% end -%>
  </div>
<% end -%>
  <div class="form-group text-center">
    <%%= back_btn %>
    <%%= f.submit t('submit'), class: 'btn btn-success' %>
  </div>
<%% end %>
