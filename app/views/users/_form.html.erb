<%%= form_for(current_user, html: { method: :put, multipart: true }) do |f| %>
  <%%= show_form_errors_if_any(current_user) %>
  <div class="form-group">
    <%%= f.label :name, class: 'control-label' %>
    <%%= f.text_field :name, autofocus: true, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%%= f.submit t('.update_account'), class: 'btn btn-success' %>
  </div>
<%% end %>
