<h2><%%= t '.header' %></h2>
<%%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }, class: 'form') do |f| %>
  <%%= devise_error_messages! %>
  <%%= f.hidden_field :reset_password_token %>
  <div class="form-group">
    <%%= f.label :password, t('.password.new'), class: 'control-label' %>
    <%%= f.password_field :password, autocomplete: "off", class: 'form-control input-lg' %>
  </div>
  <div class="form-group">
    <%%= f.label :password_confirmation, t('.password.confirm'), class: 'control-label' %>
    <%%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control input-lg' %>
  </div>
  <div class="form-group text-center">
    <%%= f.submit t('.change_password'), class: 'btn btn-success' %>
  </div>
<%% end %>
<%%= render 'users/shared/links' %>
