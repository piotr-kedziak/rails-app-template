<h2><%%= t '.header' %></h2>
<%% # render 'users/shared/login_with' if devise_mapping.omniauthable? %>
<%%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form') do |f| %>
  <%%= devise_error_messages! %>
  <div class="form-group">
    <%%= f.label :email, class: 'control-label' %>
    <%%= f.email_field :email, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%%= f.label :password, class: 'control-label' %>
    <%% if @validatable %>
      <span class="help-block">
        <%%= t '.password.minimum', value: @minimum_password_length %>
      </span>
    <%% end %>
    <%%= f.password_field :password, autocomplete: "off", class: 'form-control' %>
  </div>
  <div class="form-group">
    <%%= f.label :password_confirmation, class: 'control-label' %>
    <%%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control' %>
  </div>
  <div class="form-group">
    <div class="checkbox">
      <label>
        <%%= f.check_box :terms_accepted %>
        <%%= t '.conditions' %>
      </label>
    </div>
  <div class="form-group">
    <div class="checkbox">
      <label>
        <%%= f.check_box :cookies_accepted %>
        <%%= t '.cookies' %>
      </label>
    </div>
  </div>
  <div class="form-group text-center">
    <%%= f.submit t('register'), class: 'btn btn-block btn-success' %>
  </div>
<%% end %>
<%%= render 'users/shared/links' %>
